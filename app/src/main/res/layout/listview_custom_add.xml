<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_lst_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foodbanhmithit2"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_diemtam_add"
            android:text="@string/txt_diemtam"
            android:textSize="20sp"
            android:textColor="#fff"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_monanyeuthich_add"
            android:text="Bánh mì thịt"
            android:layout_below="@id/txt_diemtam_add"
            android:textSize="34sp"
            android:textColor="#fff"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/editwhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:id="@+id/img_edit_add"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancelwhite"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/img_cancel_add"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>